{
  "name": "@eth-optimism/contracts-ts",
  "version": "0.17.0",
  "description": "TypeScript interface for Contracts Bedrock",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/optimism.git",
    "directory": "packages/contracts-ts"
  },
  "homepage": "https://optimism.io",
  "type": "module",
  "main": "dist/constants.cjs",
  "module": "dist/constants.js",
  "types": "src/constants.ts",
  "exports": {
    ".": {
      "types": "./src/constants.ts",
      "import": "./dist/constants.js",
      "require": "./dist/constants.cjs"
    }
  },
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf ./dist",
    "preinstall": "npx only-allow pnpm",
    "generate": "tsx scripts/chains/generate.js && pnpm build && pnpm lint:fix",
    "generate:check": "pnpm generate && git diff --exit-code ./addresses.json && git diff --exit-code ./abis.json",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eth-optimism/contracts-bedrock": "workspace:*",
    "@eth-optimism/superchain-registry": "github:ethereum-optimism/superchain-registry",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/glob": "^8.1.0",
    "@vitest/coverage-istanbul": "^1.2.1",
    "@wagmi/core": "^2.2.1",
    "abitype": "^0.10.3",
    "glob": "^10.3.10",
    "isomorphic-fetch": "^3.0.0",
    "jest-dom": "link:@types/@testing-library/jest-dom",
    "jsdom": "^23.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1",
    "wagmi": "^2.2.1",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "@wagmi/core": "^2.1.1",
    "wagmi": "^2.2.1"
  },
  "peerDependenciesMeta": {
    "wagmi": {
      "optional": true
    },
    "@wagmi/core": {
      "optional": true
    }
  },
  "dependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/change-case": "^2.3.1",
    "change-case": "5.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "^2.1.1"
  }
}
